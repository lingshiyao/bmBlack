
.setting {
    display: flex;
    flex-direction: column;
    align-items: center;
    background: #1f1f1f;
    /*min-height: 100vh;*/
}

.top {
    width: 100%;
    position: relative;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    height: 11.73vw;
}

.back-arrow {
    width: 5.47vw;
    height: 4.67vw;
    position: absolute;
    left: 4vw;
}

.title {
    font-size: 4.8vw;
    font-weight: bold;
    color: #111111;
    position: absolute;
}

.text {
    font-size: 4vw;
    color: #FFFFFF;
    margin-left: 3.87vw;
    font-weight: 500;
}

.line {
    display: flex;
    justify-content: space-between;
    width: 100vw;
    align-items: center;
}

.header-box {
    width: 12.8vw;
    height: 12.8vw;
    border-radius: 6.4vw;
    background: #444444;
}

.header {
    position: absolute;
    background: #444444;
    border-radius: 6.4vw;
}

.right-arrow {
    width: 1.6vw;
    height: 3.33vw;
    margin-right: 4vw;
    margin-left: 3.47vw;
}

.input-line {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-end;
    flex: 1;
}

.input-text {
    font-size: 4vw;
    font-weight: 500;
    color: #FDD3A1;
}

.input-text-has {
    font-size: 4vw;
    font-weight: 500;
    color: #FFFFFF;
    opacity: 0.2;
    flex: 1;
    text-align: end;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: clip;
    width: 10vw;
    margin-left: 5vw;
}

.line-h {
    width: 92vw;
    height: 0.2vw;
    background: #FFFFFF;
    opacity: 0.2;
}

.login-out {
    width: 92vw;
    height: 11.73vw;
    background: #2A2A2A;
    border-radius: 6vw;
    font-size: 4vw;
    /*font-weight: bold;*/
    color: #F33838;
    line-height: 11.73vw;
    text-align: center;
    margin-bottom: 12vw;
}

.file-ele {
    position: absolute;
    display: flex;
    overflow: hidden;
    opacity: 0;
    width: 25.6vw;
    height: 12.8vw;
    background: #00a3fb;
    cursor: pointer;
}

.hidden {
    visibility: hidden;
}

.base {
    height: 100vh;
    background: #1f1f1f;
}
