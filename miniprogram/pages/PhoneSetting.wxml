<view class="base">
    <PhoneTitle title="设置" status="1" id="phone-title"></PhoneTitle>
    <scroll-view
            scroll-y="true"
            enhanced="true"
            style="{{scrollStyle}}"
            show-scrollbar="{{false}}"
    >
        <view class="setting">
            <view class="line" style="margin-top: 4vw;">
                <view class="text">
                    用户头像
                </view>
                <view class="input-line">
                    <!--                <input id="input_img" accept="image/*" class="file-ele" file-model="image" multiple="" name="image"-->
                    <!--                       nv-file-select="" type="file" uploader=""-->
                    <!--                       :bindchange="getImage">-->
                    <!--                </input>-->
                    <image
                            mode="aspectFill"
                            src="{{defaultUrl}}"
                            class="header-box"
                            binderror="headerLoadFail"
                            stylee="width: 12.8vw;height: 12.8vw;border-radius: 6.4vw;"
                            anim="animate__animated animate__bounceIn animate__faster"
                            bindtap="chooseImg">
                    </image>
                    <image lazy-load="true" src="{{rightArrowUrl}}" class="right-arrow"></image>
                </view>
            </view>
            <view class="line" style="margin-top: 5.87vw;">
                <view class="text">
                    用户名
                </view>
                <view class="input-line">
                    <view wx:if="{{userDetail.user.phoneNumber == '' || userDetail.user.phoneNumber == null}}"
                          class="input-text">
                        请输入
                    </view>
                    <view wx:else class="input-text-has">
                        {{ userDetail.user.phoneNumber }}
                    </view>
                    <image lazy-load="true" src="{{rightArrowUrl}}" class="right-arrow hidden"></image>
                </view>
            </view>
            <view class="line" style="margin-top: 10.27vw;" bindtap="changUserInfo">
                <view class="text">
                    昵称
                </view>
                <view class="input-line">
                    <view wx:if="{{userDetail.userExt.nickname == '' || userDetail.userExt.nickname == null}}"
                          class="input-text">
                        请输入
                    </view>
                    <view wx:else class="input-text-has">
                        {{ userDetail.userExt.nickname }}
                    </view>
                    <image lazy-load="true" src="{{rightArrowUrl}}" class="right-arrow"></image>
                </view>
            </view>
            <view class="line" style="margin-top: 10.27vw;" bindtap="changUserInfo">
                <view class="text">
                    个性签名
                </view>
                <view class="input-line">
                    <view wx:if="{{userDetail.userExt.intro == '' || userDetail.userExt.intro == null}}"
                          class="input-text">
                        请输入
                    </view>
                    <view wx:else class="input-text-has">
                        {{ userDetail.userExt.intro }}
                    </view>
                    <image lazy-load="true" src="{{rightArrowUrl}}" class="right-arrow"></image>
                </view>
            </view>
            <view class="line" style="margin-top: 10.27vw;" bindtap="changUserInfo">
                <view class="text">
                    Email
                </view>
                <view class="input-line">
                    <view wx:if="{{userDetail.userExt.email == '' || userDetail.userExt.email == null}}"
                          class="input-text">
                        请输入
                    </view>
                    <view wx:else class="input-text-has">
                        {{ userDetail.userExt.email }}
                    </view>
                    <image lazy-load="true" src="{{rightArrowUrl}}" class="right-arrow"></image>
                </view>
            </view>
            <view class="line-h" style="margin-top: 6.67vw;"></view>
            <view bindtap="copyAddressText" class="line" style="margin-top: 7.07vw;">
                <view class="text">
                    钱包地址
                </view>
                <view class="input-line">
                    <view wx:if="{{userDetail.userExt.address == '' || userDetail.userExt.address == null}}"
                          class="input-text">
                        请输入
                    </view>
                    <view wx:else class="input-text-has">
                        {{ userDetail.userExt.address }}
                    </view>
                    <image lazy-load="true" src="{{rightArrowUrl}}" class="right-arrow hidden"></image>
                </view>
            </view>
            <view class="line-h" style="margin-top: 6.67vw;"></view>
            <view class="line" style="margin-top: 7.2vw;" bindtap="changePwd">
                <view class="text">
                    登录密码
                </view>
                <view class="input-line">
                    <image lazy-load="true" src="{{rightArrowUrl}}" class="right-arrow"></image>
                </view>
            </view>
            <view class="line-h" style="margin-top: 6.67vw;"></view>
            <view class="line" style="margin-top: 7.2vw;" bindtap="liaojiewomen">
                <view class="text">
                    了解更多
                </view>
                <view class="input-line">
                    <image lazy-load="true" src="{{rightArrowUrl}}" class="right-arrow"></image>
                </view>
            </view>
            <view class="line" style="margin-top: 10.27vw;" bindtap="guanyuwomen">
                <view class="text">
                    关于我们
                </view>
                <view class="input-line">
                    <image lazy-load="true" src="{{rightArrowUrl}}" class="right-arrow"></image>
                </view>
            </view>
            <view class="line" style="margin-top: 10.27vw;" bindtap="lianxiwomen">
                <view class="text">
                    联系我们
                </view>
                <view class="input-line">
                    <image lazy-load="true" src="{{rightArrowUrl}}" class="right-arrow"></image>
                </view>
            </view>
            <view class="line" style="margin-top: 10.27vw; margin-bottom:10vw" bindtap="clearCache">
                <view class="text">
                    清空缓存
                </view>
                <view class="input-line">
                    <image lazy-load="true" src="{{rightArrowUrl}}" class="right-arrow"></image>
                </view>
            </view>
            <!--            <view class="login-out" style="margin-top: 12.67vw;" bindtap="logout">-->
            <!--                退出登录-->
            <!--            </view>-->

            <view style="{{footStyle}}"></view>
        </view>
    </scroll-view>
    <PhoneModalInput id="phoneModalInput"></PhoneModalInput>
</view>