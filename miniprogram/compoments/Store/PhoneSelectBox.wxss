.select-box-title {
    height: 9.6vw;
    line-height: 9.6vw;
    font-size: 3vw;
    font-weight: 400;
    color: #FDD3A1;
    text-align: left;
    cursor: pointer;
    display: inline-block;
    vertical-align: middle;
    margin-left: 2vw;
}

.select-box-title:hover {
    /*color: #FDD3A1;*/
}

.select-box-more {
    position: relative;
    float: right;
    top: 4vw;
    right: 3vw;
    width: 3vw;
    height: 2vw;
}

.select-box-img {
    vertical-align: middle;
}

.s-s-s {
    background-color: #353535;
    border-radius: 6vw;
}

.select-box-bg {
    background-color: #353535;
    border-radius: 6vw;
    z-index: 10;
    position: relative;
    width: 100%;
    /*border: 1px solid #FDD3A1;*/
}

.select-box-button {
    width: 100%;
    height: 9.6vw;
    transition: top 1s;
}
